### âœ… Java Code:


class Solution {
    public void reverseString(char[] s) {
     int right =s.length-1;
     int m = (s.length-1)/2;
     int left =0;
     char temp =0;
     for(int i =0;i<=m;i++){
         temp = s[left];
         s[left] =s[right];
         s[right] = temp;
         
         left++;
         right--;
     }
        
       
     
    }
}
